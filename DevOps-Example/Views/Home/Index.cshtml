@model DevOps.Models.ImagemEventoModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">DevOps Demo</h1>
    <p>Projeto exemplo para demos de Devops.</p>
</div>
<div class="text-center">
    <a class="btn btn-success" asp-action="GerarMassa">Gerar massa</a>
</div>




<div class="row justify-content-center">
    <div class="col col-6 ">
        <div class="card mb-3">
            <div class="card-header text-white bg-success">Versão: latest</div>
            <div class="card-body text-center">
                <b>@Model.Descricao</b>
                <br />
                <div class="row">
                    <div class="col col-12">
                        <img src="@Model.Imagem" class="img-fluid" alt="@Model.Descricao" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
